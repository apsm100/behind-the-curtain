<resources>
    <!-- Base application theme. -->
    <style name="Theme.BTC" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/BTCPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/BTCSecondaryDark</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/BTCSecondaryDark</item>
    </style>
</resources>